{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "declarationMap": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "skipLibCheck": true
  }
}